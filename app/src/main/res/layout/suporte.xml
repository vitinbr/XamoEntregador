<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:background="@color/amarelotoolbar"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/mapView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtNovaentrega"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="12sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="38dp"
            android:text="Suporte"
            android:textColor="#000000"
            android:textSize="22dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="73dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="348dp"
            android:layout_height="77dp"
            android:text="Nosso horário de Atendimento é das 09- as 18h horas, pode conversar diretamente com nosso whats app

"
            android:textColor="#000000"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/imgwhatapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"
            app:srcCompat="@drawable/whatapp" />

        <TextView
            android:id="@+id/txt5"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginLeft="65dp"
            android:layout_marginBottom="15dp"
            android:text="Nosso Email de contato"
            android:textColor="#000000"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="545dp" />

        <TextView
            android:id="@+id/txtc"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Contato@xamodelivery.com.br"
            android:textColor="#0D46FF"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="545dp" />


        <TextView
            android:id="@+id/txt3"
            android:layout_width="350dp"
            android:layout_height="29dp"
            android:text="Em caso de duvidas, acesse nosso site."
            android:textColor="#000000"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="545dp" />

        <TextView
            android:id="@+id/txt6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:text="www.xamodelivery.com.br"
            android:textColor="#0D46FF"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="545dp" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>